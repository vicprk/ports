# URL:https://github.com/tsujan/FeatherPad
# Maintainer: victor, victorpr at vivaldi dot net
# Depends on: qt5

name=FeatherPad
version=0.15.0
release=1
source=(https://github.com/tsujan/$name/archive/V$version/$name-$version.tar.gz)

build()
{
	cmake $name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr

	make && make DESTDIR=$PKG install
}
